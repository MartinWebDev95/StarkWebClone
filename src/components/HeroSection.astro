---
import HeroSectionImage from "./HeroSectionImage.astro";
import HeroSectionInfo from "./HeroSectionInfo.astro";
---

<section class="section">
	<div class="section_container">
		<HeroSectionInfo />

		<HeroSectionImage />
	</div>
</section>

<style>
	.section{
		background-image: url('/assets/gradient-bg.webp');
		background-repeat: no-repeat;
		background-size: cover;
		display: flex;
		justify-content: flex-start;
		padding-inline: 1rem;
		overflow: hidden;
	}

	.section .section_container{
		display: flex;
		flex-direction: column;
		max-width: 1160px;
	}

	/* DESKTOP */
	@media screen and (min-width: 900px) {
		.section{
			height: auto;
			padding-inline: 4rem;
		}

		.section .section_container{
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			column-gap: 1rem;
		}
	}
</style>