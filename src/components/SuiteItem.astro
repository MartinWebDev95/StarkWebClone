---
const { suite } = Astro.props;
---
<li class="suiteItem">
  <img src={suite.image} alt={suite.name} />

  <p>{suite.name}</p>
</li>

<style>
  .suiteItem{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .suiteItem img{
    width: 100px;
    margin: 0 auto;
    transition: all .2s ease-in-out;
  }

  .suiteItem p{
    color: var(--darkBlue);
    margin-top: 1rem;
    text-align: center;
  }

  @media screen and (min-width: 990px) {
    
    .suiteItem{
      grid-column: auto/span 2;
      grid-row: 1;
    }

    .suiteItem:nth-last-child(odd) img:hover,
    .suiteItem:nth-last-child(even) img:hover{
      cursor: pointer;
      -webkit-box-shadow: 0px 0px 14px -3px rgba(0,0,0,0.75);
      -moz-box-shadow: 0px 0px 14px -3px rgba(0,0,0,0.75);
      box-shadow: 0px 0px 14px -3px rgba(0,0,0,0.75);
    }

    .suiteItem:nth-last-child(odd) img:hover{
      transform: rotate(10deg);
    }
    
    .suiteItem:nth-last-child(even) img:hover{
      transform: rotate(-10deg);
    }

    .suiteItem:nth-last-child(-n+4){
      grid-row: 2/3;
    }

    .suiteItem:nth-last-child(4){
      grid-column-end: span 2;
      grid-column-start: 2;
    }
  }
</style>